+    private string? _remoteTypeName;
+    private string? _remoteStackTrace;
+
+    private protected BuildExceptionBase()
+        : base()
+    { }
+
+    private protected BuildExceptionBase(string message)
+        : base(message)
+    { }
+
+    private protected BuildExceptionBase(
+        string message,
+        Exception? inner)
+        : base(message, inner)
+    { }
+
