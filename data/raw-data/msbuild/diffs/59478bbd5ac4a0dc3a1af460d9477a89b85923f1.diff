+                                new ProjectConfigurationInSolution("1a", "1b", true)
+                            },
+                            {
+                                new SolutionConfigurationInSolution("Foo", "NonMatchingPlatform"),
+                                new ProjectConfigurationInSolution("1c", "1d", true)
+                            }
+                        }
+                    }
+                }
