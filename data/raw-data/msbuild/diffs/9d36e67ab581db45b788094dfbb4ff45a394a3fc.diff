+<ItemGroup>
+  <ProjectCachePlugin Include="$(SomePath)\MyAmazingCachePlugin.dll">
+    <PluginSetting1>$(PluginSetting1)</PluginSetting1>
+    <PluginSetting2>$(PluginSetting2)</PluginSetting2>
+    <PluginSetting3>$(PluginSetting3)</PluginSetting3>
+  </ProjectCachePlugin>
+</ItemGroup>
